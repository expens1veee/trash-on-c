#define _USE_MATH_DEFINES
#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;
int main(){
    double pi = 0.0, d;
    cin >> d;
    int k = 1, n;
    for (int i = 1; ; i++){
        if ((4.0 / k) < d){
            break;
        }
        else {
            pi += 4.0 / k;
            k+=2;
        }
        if (( 4.0 / k) < d){
            break;
        }
        else {
            pi -= 4.0 / k;
            k += 2;
        }
    }
    cout << pi << "\n";
    cout << setprecision(16) << M_PI<< "\n";
    return 0;
}

