//порядковый номер положительного числа
#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    int a1,a2,a,sum=0,sum1=0;
    setlocale(LC_ALL, "Russian");
    while (true){
        cin >> a;
        sum+=1;
        if (a == 777){
            break;
        }
        if (a > 0)
            cout << " порядковый номер положительного числа" << " " << sum << "\n";
        
    }
       
    
return 0;
}
