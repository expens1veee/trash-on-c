#include <iostream>
#include <cstdlib>
#include <cmath>
 
using namespace std;
 
 
int main()
{
    setlocale(LC_ALL, "russian");
    int n, sum = 0;
    cout << "Введите число: ";
    cin >> n;
    if (n >= 10)
    {
        int m = n;
        while (m > 0)
        {
            sum += m - (m/10)*10;
            m /= 10;
        }
    }
    else sum = n;
    cout << "Сумма цифр числа " << n << " равна " << sum << "\n";
    return 0;
}
