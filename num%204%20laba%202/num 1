#include <iostream>
#include <cstdlib>
#include <cmath>
#include <iomanip>
#define _USE_MATH_DEFINES
 
using namespace std;
 
 
int main()
{
    setlocale(LC_ALL, "russian");
    int i,n;
    double pi;
    cin >> n;
    for (i=0;n>i;i++){
        pi+= ((pow(-1,i)) / (2*i+1));
              }
              pi*=4;
    cout << pi<< "\n";
    cout << setprecision(16) << M_PI;
    return 0;
}
